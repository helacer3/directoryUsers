{% extends "layout.html.twig" %}

{% block title %}Registro - Directorio de Usuarios{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
	<form action="index.php" method="post">
		<div class="row">
			<div class="col-12 text-center">
				<h1>Registro de Usuario</h1>
			</div>
			{% if (errMessage != "") %}
				<div class="offset-md-4 col-4 text-center alert alert-danger">
					{{ errMessage }}	
				</div>
			{% endif %}
			<div class="offset-md-4 col-4 text-center">
				<div class="form-group">
					<label>Nombre:</label><br />
					<input type="text" name="usr_name" placeholder="Favor digite su nombre completo" class="w-100" required><br />
				</div>
				<div class="form-group">
					<label>Documento:</label><br />
					<input type="text" name="usr_document" placeholder="Favor digite su número de documento" class="w-100" required><br />
				</div>
				<div class="form-group">
					<label>Pais:</label><br />
					<select id="usr_country" name="usr_country" class="w-100">
						{% for country in countries %}
							<option value="{{ country.country_code|trim }}" {{ (country.country_code|trim == 'CO') ? 'selected="selected"' : '' }} >
								{{country.country_name}}
							</option>
						{% endfor %}
					</select><br />
				</div>
				<div class="form-group">
					<label>Correo:</label><br />
					<input type="email" name="usr_email" placeholder="Favor digite su correo electrónico"  class="w-100" required><br />
				</div>
				<div class="form-group">
					<label>Password:</label><br />
					<input type ="password" name="usr_password" placeholder="Favor digite su contraseña"  class="w-100" required><br /><br />
				</div>
				<div class="form-group">
					<input type ="hidden" name="action" value="register">
					<button type="submit" class="btn-success">Registrarme</button>
				</div>
			</div>
		</div>
	</form>
{% endblock %}