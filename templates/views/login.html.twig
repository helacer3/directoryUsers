{% extends "layout.html.twig" %}

{% block title %}Inicio de sesión - Directorio de Usuarios{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-12 text-center">
			<h1>Inicio de Sesión</h1>
		</div>
		<div class="offset-md-4 col-4 text-center">
			<form method="post">
				<div class="form-group">
					<label>Correo:</label><br />
					<input type="email" name="usr_email" placeholder="Favor digite su correo electrónico"  class="w-100" required><br />
				</div>
				<div class="form-group">
					<label>Password:</label><br />
					<input type ="password" name="usr_password" placeholder="Favor digite su contraseña"  class="w-100" required><br /><br />
				</div>
				<div class="form-group">
					<input type ="hidden" name="action" value="login"> 
					<a href="index.php?page=register" class="btn-warning">Ir a Registrarme</a>
					<button type="submit" class="btn-success">Iniciar Sesión</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}